<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_grad_3"
    tools:context=".startpage.UserCheckFragment">

    <ImageView
        android:id="@+id/iv_user_check_logo"
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:layout_marginTop="63dp"
        android:alpha="0.5"
        android:src="@drawable/trace_new_logo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="39dp"
        android:src="@drawable/tv_check_user"
        app:layout_constraintEnd_toEndOf="@+id/iv_user_check_logo"
        app:layout_constraintStart_toStartOf="@+id/iv_user_check_logo"
        app:layout_constraintTop_toBottomOf="@+id/iv_user_check_logo" />

    <EditText
        android:id="@+id/usercheck_et_id"
        android:layout_width="285dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="34dp"
        android:fontFamily="@font/netmarblem"
        android:hint="이름"
        android:lineSpacingExtra="5dp"
        android:textColor="@color/colorDarkGray"
        android:textSize="17dp"
        app:layout_constraintEnd_toEndOf="@+id/imageView3"
        app:layout_constraintStart_toStartOf="@+id/imageView3"
        app:layout_constraintTop_toBottomOf="@+id/imageView3" />

    <EditText
        android:id="@+id/usercheck_et_ph"
        android:layout_width="285dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:fontFamily="@font/netmarblem"
        android:hint="휴대폰 번호"
        android:lineSpacingExtra="5dp"
        android:textColor="@color/colorDarkGray"
        android:textSize="17dp"
        app:layout_constraintEnd_toEndOf="@+id/usercheck_et_id"
        app:layout_constraintStart_toStartOf="@+id/usercheck_et_id"
        app:layout_constraintTop_toBottomOf="@+id/usercheck_et_id" />

    <TextView
        android:id="@+id/usercheck_btn_next"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="35dp"
        android:layout_marginRight="35dp"
        android:layout_marginBottom="66dp"
        android:fontFamily="@font/netmarblem"
        android:lineSpacingExtra="5sp"
        android:text="다음 >"
        android:textColor="#4a4949"
        android:textSize="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/usercheck_btn_prev"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="35dp"
        android:layout_marginLeft="35dp"
        android:layout_marginBottom="66dp"
        android:fontFamily="@font/netmarblem"
        android:lineSpacingExtra="5sp"
        android:text="&lt; 이전"
        android:textColor="#4a4949"
        android:textSize="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />



</androidx.constraintlayout.widget.ConstraintLayout>